<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".settings.presenation.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


     <ImageView
         android:id="@+id/backImageView"
         android:layout_width="@dimen/_25sdp"
         android:layout_height="@dimen/_25sdp"
         android:layout_marginStart="@dimen/_15sdp"
         android:layout_marginTop="@dimen/_30sdp"
         android:importantForAccessibility="no"
         android:src="@drawable/back"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:id="@+id/pageTitleTextView"
         style="@style/p2"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/account_amp_settings"
         app:layout_constraintBottom_toBottomOf="@+id/backImageView"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="@+id/backImageView" />


     <TextView
         android:id="@+id/accountTitleTextView"
         style="@style/p1"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_30sdp"
         android:text="@string/account"
         app:layout_constraintStart_toStartOf="@+id/backImageView"
         app:layout_constraintTop_toBottomOf="@+id/backImageView" />

        <ImageView
            android:id="@+id/accountIconImageView"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:src="@drawable/account"
            app:layout_constraintStart_toStartOf="@+id/accountTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/accountTitleTextView"
            android:importantForAccessibility="no" />


        <TextView
            android:id="@+id/accountTextView"
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:text="@string/account"
            app:layout_constraintBottom_toBottomOf="@+id/accountIconImageView"
            app:layout_constraintStart_toEndOf="@+id/accountIconImageView"
            app:layout_constraintTop_toTopOf="@+id/accountIconImageView" />

        <ImageView
            android:id="@+id/accountRightArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/accountIconImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/accountIconImageView" />


        <ImageView
            android:id="@+id/addressIconImageView"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/shopping"
            app:layout_constraintStart_toStartOf="@+id/accountIconImageView"
            app:layout_constraintTop_toBottomOf="@+id/accountIconImageView" />


        <TextView
            android:id="@+id/addressTextView"
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:text="@string/shipping_address"
            app:layout_constraintBottom_toBottomOf="@+id/addressIconImageView"
            app:layout_constraintStart_toEndOf="@+id/addressIconImageView"
            app:layout_constraintTop_toTopOf="@+id/addressIconImageView" />

        <ImageView
            android:id="@+id/addressRightArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/addressIconImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/addressIconImageView" />


        <ImageView
            android:id="@+id/paymentIconImageView"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/payment"
            app:layout_constraintStart_toStartOf="@+id/accountIconImageView"
            app:layout_constraintTop_toBottomOf="@+id/addressIconImageView" />


        <TextView
            android:id="@+id/paymentTextView"
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:text="@string/payment_info"
            app:layout_constraintBottom_toBottomOf="@+id/paymentIconImageView"
            app:layout_constraintStart_toEndOf="@+id/paymentIconImageView"
            app:layout_constraintTop_toTopOf="@+id/paymentIconImageView" />

        <ImageView
            android:id="@+id/paymentRightArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/paymentIconImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/paymentIconImageView" />


        <TextView
            android:id="@+id/appSettingsTextView"
            style="@style/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:text="@string/app_settings"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/backImageView"
            app:layout_constraintTop_toBottomOf="@+id/coinImageView" />


        <TextView
            android:id="@+id/enablePushNotificationTextView"
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/eneble_push_notifications"
            app:layout_constraintStart_toStartOf="@+id/appSettingsTextView"
            app:layout_constraintTop_toBottomOf="@+id/appSettingsTextView" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switchMinWidth="@dimen/_100sdp"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@+id/enablePushNotificationTextView"
            app:layout_constraintEnd_toEndOf="@+id/paymentRightArrowImageView"
            app:layout_constraintTop_toTopOf="@+id/enablePushNotificationTextView"
            />


        <TextView
            android:id="@+id/locationTextView"
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/eneble_location_services"
            app:layout_constraintStart_toStartOf="@+id/enablePushNotificationTextView"
            app:layout_constraintTop_toBottomOf="@+id/enablePushNotificationTextView" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/locationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@+id/locationTextView"
            app:layout_constraintEnd_toEndOf="@+id/paymentRightArrowImageView"
            app:layout_constraintTop_toTopOf="@+id/locationTextView"
            app:switchMinWidth="@dimen/_100sdp"/>

        <ImageView
            android:id="@+id/coinImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/money"
            app:layout_constraintStart_toStartOf="@+id/paymentIconImageView"
            app:layout_constraintTop_toBottomOf="@+id/paymentIconImageView" />

        <TextView
            android:id="@+id/coinIconImageView"
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_info"
            app:layout_constraintBottom_toBottomOf="@+id/coinImageView"
            app:layout_constraintStart_toStartOf="@+id/paymentTextView"
            app:layout_constraintTop_toTopOf="@+id/coinImageView" />


        <TextView
            android:id="@+id/logoutTextView"
            style="@style/p2"
            android:textColor="@color/md_theme_light_primary"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="@string/logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/locationTextView" />


        <Spinner
            android:id="@+id/currencySpinner"
            style="@style/SpinnerTheme"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/coinIconImageView"
            app:layout_constraintEnd_toEndOf="@+id/paymentRightArrowImageView"
            app:layout_constraintTop_toTopOf="@+id/coinIconImageView" />


        <ImageView
            android:id="@+id/dropDownCitiesImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:elevation="5dp"
            android:src="@drawable/down"
            app:layout_constraintBottom_toBottomOf="@+id/currencySpinner"
            app:layout_constraintEnd_toEndOf="@+id/currencySpinner"
            app:layout_constraintTop_toTopOf="@+id/currencySpinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>