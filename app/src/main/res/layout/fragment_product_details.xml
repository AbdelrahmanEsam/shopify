<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="com.example.shopify.productdetails.domain.model.ProductsDetailsModel" />

        <variable
            name="imageAdapter"
            type="com.example.shopify.productdetails.presentation.productdetails.ProductImagesAdapter" />

        <variable
            name="sizesAdapter"
            type="com.example.shopify.productdetails.presentation.productdetails.ProductSizesAdapter" />

        <variable
            name="isFabVisible"
            type="Boolean"
            android:value="false" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".productdetails.presentation.productdetails.ProductDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_150sdp"
                android:elevation="@dimen/_50sdp"
                android:indeterminateTint="@color/seed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_images_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adapter="@{imageAdapter}"
                android:background="@color/md_theme_light_primaryContainer"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="10"
                tools:listitem="@layout/product_image_item" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:text="@{product.vendor}"
                android:textColor="@color/md_theme_light_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_images_rv"
                tools:text="Best Seller" />

            <TextView
                android:id="@+id/item_name_tv"
                style="@style/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:elevation="@dimen/_10sdp"
                android:shadowColor="@color/md_theme_dark_outline"
                android:shadowDx="1"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="@{product.title}"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:text="Nike Club Max" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginEnd="16dp"
                android:isIndicator="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_name_tv" />

            <!--  <TextView
                  android:id="@+id/item_price_tv"
                  style="@style/p2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:layout_marginStart="16dp"
                  android:elevation="@dimen/_10sdp"
                  android:shadowColor="@color/md_theme_dark_outline"
                  android:shadowDx="1"
                  android:shadowDy="4"
                  android:shadowRadius="5"
                  android:textStyle="bold"
                  app:layout_constraintBottom_toTopOf="@id/description_sv"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/item_name_tv"
                  app:layout_constraintVertical_bias="0.037"
                  tools:text="price" />-->

            <ScrollView
                android:id="@+id/description_sv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/item_name_tv">

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="@{product.tags}"
                    android:textAlignment="center"
                    android:textColor="@color/md_theme_light_outline"
                    tools:text="@string/lorem_ipsum" />

            </ScrollView>

            <TextView
                android:id="@+id/size_tv"
                style="@style/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginStart="16dp"
                android:elevation="@dimen/_10sdp"
                android:shadowColor="@color/md_theme_dark_outline"
                android:shadowDx="1"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="@string/size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_sv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_sizes_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:adapter="@{sizesAdapter}"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/size_tv"
                tools:itemCount="5"
                tools:listitem="@layout/size_item" />

            <TextView
                android:id="@+id/tv"
                style="@style/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginStart="16dp"
                android:elevation="@dimen/_10sdp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_sizes_rv"
                tools:text="Price" />

            <TextView
                android:id="@+id/new_price_tv"
                style="@style/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginStart="16dp"
                android:elevation="@dimen/_10sdp"
                android:shadowColor="@color/md_theme_dark_outline"
                android:shadowDx="1"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="@{product.variants.get(0).price}"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv"
                tools:text="new price" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_to_cart_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/cart_icon"
                android:visibility="@{isFabVisible? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/add_to_fav_fab"
                app:layout_constraintEnd_toEndOf="@+id/product_sizes_rv" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_to_fav_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/heart_icon"
                android:visibility="@{isFabVisible? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/parent_fab"
                app:layout_constraintEnd_toEndOf="@+id/parent_fab" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/parent_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:src="@drawable/add_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
